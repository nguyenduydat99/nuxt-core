{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended",
    "plugin:prettier/recommended"
  ],

  "rules": {
    "no-console": "error",
    "prettier/prettier": ["error", { "singleQuote": true, "semi": false }],
    "vue/multi-word-component-names": ["off"],
    "vue/no-unused-vars": [
      "error",
      {
        "ignorePattern": "^_"
      }
    ]
  }
}
