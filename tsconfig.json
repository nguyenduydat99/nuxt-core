{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "target": "esnext",
  "module": "esnext",
  "moduleResolution": "node",
  "lib": ["esnext", "esnext.asynciterable", "dom"],
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "allowJs": true,
  "sourceMap": true,
  "strict": true,
  "noEmit": true,
  "compilerOptions": {
    "baseUrl": "./"
  },
  "paths": {
    "~/*": ["./*"],
    "@/*": ["./src/*"]
  },
  "types": ["@nuxt/types"]
}
